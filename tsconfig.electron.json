{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "electron/dist",
    "rootDir": "electron",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["electron/**/*"]
}
